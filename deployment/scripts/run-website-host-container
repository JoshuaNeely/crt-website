RUN_OPTIONS="-it --rm -d"
INSTANCE_NAME="--name website-host-instance"
EXPOSE_PORTS="-p 80:80"
IMAGE_NAME="website-host"

echo "\n----REMOVE EXISTING CONTAINER IF EXISTS----\n"
docker kill website-host-instance

echo "\n----RUN CONTAINER HOSTING WEBSITE----\n"
docker run $RUN_OPTIONS $EXPOSE_PORTS $INSTANCE_NAME $IMAGE_NAME
